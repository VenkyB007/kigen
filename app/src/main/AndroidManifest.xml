<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.application.kigen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kigen_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kigen_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.mytheme">
        <activity android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UpdateExpense"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".CreateProfile"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".MainActivity">

        </activity>
        <activity android:name=".ExpenseActivity" />
        <activity android:name=".CreateExpense" />

    </application>

</manifest>